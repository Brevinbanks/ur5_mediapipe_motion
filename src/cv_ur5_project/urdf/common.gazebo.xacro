<?xml version="1.0"?>
<robot xmlns:xacro="http://wiki.ros.org/xacro">
  <!--
    URDF snippet for enabling ros_control integration in Gazebo simulation.
    This includes a Gazebo plugin that connects Gazebo's simulation loop
    with the ros_control interfaces.
  -->
   <!-- Attach ros_control plugin to the simulated robot -->
  <gazebo>
    <plugin name="ros_control" filename="libgazebo_ros_control.so">
      <!-- This plugin allows ROS controllers to control Gazebo joints via /controller_manager -->
      <!-- Additional parameters like robotNamespace or controlPeriod can be specified if needed -->
    
    </plugin>

  </gazebo>

</robot>
